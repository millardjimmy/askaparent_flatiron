<%= form_for [@question, @answer] do |f| %>
  <p>
    <b>Answer here:</b><br>
    <%= f.text_area :answer_text %>
  </p>
  <p>
    <%= f.submit "Save Answer" %>
  </p>
<% end %>

<ul>
  <% @answer.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>

